<VirtualHost *:80>
        ServerAdmin webmaster@{{hostname}}

        DocumentRoot {{default_apache_document_root}}
        <Directory {{default_apache_document_root}}>
                Options -Indexes +FollowSymLinks
                AllowOverride All
                Order allow,deny
                allow from all
        </Directory>
        ErrorLog ${APACHE_LOG_DIR}/error.log
        LogLevel error
        CustomLog ${APACHE_LOG_DIR}/access.log combined

</VirtualHost>
